<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <buybox_payment>
                <debug>0</debug>
                <active>0</active>
                <model>BuyBoxPaymentGatewayFacade</model>
                <order_status>pending_payment</order_status>
                <title>GiftCard (BuyBox)</title>
                <sort_order>1</sort_order>
                <payment_action>authorize</payment_action>
                <is_gateway>1</is_gateway>
                <can_initialize>1</can_initialize>
                <can_use_checkout>1</can_use_checkout>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_capture_partial>0</can_capture_partial>
                <can_authorize_vault>0</can_authorize_vault>
                <can_capture_vault>0</can_capture_vault>
                <can_use_internal>0</can_use_internal>
                <can_refund_partial_per_invoice>1</can_refund_partial_per_invoice>
                <can_refund>1</can_refund>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <can_edit>1</can_edit>
                <can_review_payment>1</can_review_payment>
                <can_accept_payment>1</can_accept_payment>
                <can_deny_payment>1</can_deny_payment>
                <environment>sandbox</environment>
                <allowspecific>0</allowspecific>
                <service_domain/>
                <api_username/>
                <api_password backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <api_signature backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
            </buybox_payment>
        </payment>
    </default>
</config>
